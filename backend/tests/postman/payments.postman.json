{
  "info": {
    "name": "SkillCerts - Payments",
    "description": "Razorpay payment workflow with backend verification",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "courseId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "paymentId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Payment Flow",
      "item": [
        {
          "name": "1. Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('orderId', jsonData.data.orderId);",
                  "    pm.collectionVariables.set('paymentId', jsonData.data.paymentId);",
                  "    console.log('Order created: ' + jsonData.data.orderId);",
                  "    console.log('Amount: ' + jsonData.data.amount/100);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/create-order",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "create-order"]
            },
            "description": "Step 1: Backend creates Razorpay order, validates course from DB, stores payment as pending"
          },
          "response": []
        },
        {
          "name": "2. Verify Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpay_order_id\": \"{{orderId}}\",\n  \"razorpay_payment_id\": \"pay_test123\",\n  \"razorpay_signature\": \"test_signature\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/verify",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "verify"]
            },
            "description": "Step 2: Backend verifies Razorpay signature, marks payment success, auto-enrolls user. Replace with actual values from Razorpay response."
          },
          "response": []
        }
      ],
      "description": "Complete payment flow: Create order → Frontend Razorpay checkout → Verify signature"
    },
    {
      "name": "Student",
      "item": [
        {
          "name": "Get My Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/my",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "my"]
            },
            "description": "Get all payments for current user"
          },
          "response": []
        },
        {
          "name": "Get Payment Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/{{paymentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "{{paymentId}}"]
            },
            "description": "Get single payment details"
          },
          "response": []
        }
      ],
      "description": "Student payment history"
    },
    {
      "name": "Instructor",
      "item": [
        {
          "name": "Get Course Payments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/payments/course/{{courseId}}",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "course", "{{courseId}}"]
            },
            "description": "Get all payments for a course with total revenue (instructor/admin only)"
          },
          "response": []
        }
      ],
      "description": "Instructor payment analytics"
    },
    {
      "name": "Error Tests",
      "item": [
        {
          "name": "Create Order - Free Course",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"<free_course_id>\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/create-order",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "create-order"]
            },
            "description": "Test creating order for free course (should return 400)"
          },
          "response": []
        },
        {
          "name": "Verify - Invalid Signature",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpay_order_id\": \"{{orderId}}\",\n  \"razorpay_payment_id\": \"pay_test123\",\n  \"razorpay_signature\": \"invalid_signature\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/verify",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "verify"]
            },
            "description": "Test invalid signature verification (should return 400, mark payment as failed)"
          },
          "response": []
        },
        {
          "name": "Create Order - Already Enrolled",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/create-order",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "create-order"]
            },
            "description": "Test creating order for already enrolled course (should return 409)"
          },
          "response": []
        }
      ],
      "description": "Payment error scenarios"
    }
  ]
}
