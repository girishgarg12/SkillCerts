{
  "info": {
    "name": "SkillCerts - Wishlist",
    "description": "Course wishlist management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "courseId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Wishlist Management",
      "item": [
        {
          "name": "Get My Wishlist",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"}
            ],
            "url": {
              "raw": "{{baseUrl}}/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist"]
            },
            "description": "Get all courses in user's wishlist with course details"
          },
          "response": []
        },
        {
          "name": "Add to Wishlist",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist"]
            },
            "description": "Add course to wishlist"
          },
          "response": []
        },
        {
          "name": "Check if Course in Wishlist",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"}
            ],
            "url": {
              "raw": "{{baseUrl}}/wishlist/check/{{courseId}}",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist", "check", "{{courseId}}"]
            },
            "description": "Check if a specific course is in wishlist"
          },
          "response": []
        },
        {
          "name": "Remove from Wishlist",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"}
            ],
            "url": {
              "raw": "{{baseUrl}}/wishlist/{{courseId}}",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist", "{{courseId}}"]
            },
            "description": "Remove course from wishlist"
          },
          "response": []
        },
        {
          "name": "Clear Wishlist",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"}
            ],
            "url": {
              "raw": "{{baseUrl}}/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist"]
            },
            "description": "Clear entire wishlist (removes all courses)"
          },
          "response": []
        }
      ],
      "description": "Wishlist CRUD operations"
    },
    {
      "name": "Error Tests",
      "item": [
        {
          "name": "Add to Wishlist - No Auth",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist"]
            },
            "description": "Test adding to wishlist without auth (should return 401)"
          },
          "response": []
        },
        {
          "name": "Add to Wishlist - Course Not Found",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"65f1a2b3c4d5e6f7g8h9i0j1\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist"]
            },
            "description": "Test adding non-existent course (should return 404)"
          },
          "response": []
        },
        {
          "name": "Add to Wishlist - Duplicate",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/wishlist",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist"]
            },
            "description": "Test adding course already in wishlist (should return 409)"
          },
          "response": []
        },
        {
          "name": "Remove from Wishlist - Not in Wishlist",
          "request": {
            "method": "DELETE",
            "header": [
              {"key": "Authorization", "value": "Bearer {{authToken}}", "type": "text"}
            ],
            "url": {
              "raw": "{{baseUrl}}/wishlist/<course_not_in_wishlist>",
              "host": ["{{baseUrl}}"],
              "path": ["wishlist", "<course_not_in_wishlist>"]
            },
            "description": "Test removing course not in wishlist (should return 404)"
          },
          "response": []
        }
      ],
      "description": "Wishlist error scenarios"
    }
  ]
}
