    {
      "name": "Payment Flow",
      "item": [
        {
          "name": "1. Create Order",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('orderId', jsonData.data.orderId);",
                  "    pm.collectionVariables.set('paymentId', jsonData.data.paymentId);",
                  "    console.log('Order created: ' + jsonData.data.orderId);",
                  "    console.log('Amount: ' + jsonData.data.amount/100);",
                  "}"
                ],
                "type": "text/javascript",
                "id": "838b8c61-dd7e-4f27-b189-43bdaa38e5fc"
              }
            }
          ],
          "id": "933b7d06-be9c-4ec7-ab66-72a0009f6a44",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courseId\": \"{{courseId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/create-order",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "payments",
                "create-order"
              ]
            },
            "description": "Step 1: Backend creates Razorpay order, validates course from DB, stores payment as pending"
          },
          "response": []
        },
        {
          "name": "2. Verify Payment",
          "id": "a1fe99ae-c062-40b9-bbb4-faf2263c66ae",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"razorpay_order_id\": \"{{orderId}}\",\n  \"razorpay_payment_id\": \"pay_test123\",\n  \"razorpay_signature\": \"test_signature\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/verify",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "payments",
                "verify"
              ]
            },
            "description": "Step 2: Backend verifies Razorpay signature, marks payment success, auto-enrolls user. Replace with actual values from Razorpay response."
          },
          "response": []
        }
      ],
      "id": "5aebe3e3-94c9-4779-9de3-25ef87ed4ed0",
      "description": "Complete payment flow: Create order → Frontend Razorpay checkout → Verify signature"
